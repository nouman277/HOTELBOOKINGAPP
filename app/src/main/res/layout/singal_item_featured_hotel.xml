<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="310dp"
    android:layout_height="380dp">

    <androidx.cardview.widget.CardView
        android:layout_width="270dp"
        android:layout_height="380dp"
        app:cardCornerRadius="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="255dp"
            android:layout_height="275dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="20dp">

            //featured Hotel image
            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="165dp"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/featuredHotelImage"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safari Hotel Davis road"
                android:fontFamily="@font/gothamrounded_bold"

                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:layout_marginTop="210dp"
                android:id="@+id/featuredHotelName"/>



            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/image_3"
                android:layout_marginTop="232dp"
                android:layout_marginLeft="7dp"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/image_3"
                android:layout_marginTop="232dp"
                android:layout_marginLeft="22dp"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/image_3"
                android:layout_marginTop="232dp"
                android:layout_marginLeft="37dp"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/image_3"
                android:layout_marginTop="232dp"
                android:layout_marginLeft="52dp"
                />









            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lahore"
                android:textSize="11sp"
                android:fontFamily="@font/gothamroundedmedium_21022"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"

                android:layout_marginTop="250dp"
                android:id="@+id/cityName"/>

            <androidx.cardview.widget.CardView
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="210dp"
                app:cardBackgroundColor="#EF4E22"
                app:cardCornerRadius="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/gothamrounded_bold"
                    android:text="8.8"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:id="@+id/featuredHotelRating"/>

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="There are more than"
            android:layout_marginTop="300dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/gothamroundedmedium_21022"
            android:textSize="9.4sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2500"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="299dp"
            android:layout_marginStart="112dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/featuredHotelPeopleRecommend"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="people"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:layout_marginTop="315dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="recommend this hotel"
            android:layout_marginTop="315dp"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:textColor="@color/black"
            android:fontFamily="@font/gothamroundedmedium_21022"
            android:textSize="9.4sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:fontFamily="@font/gothamroundedmedium_21022"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="350dp"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="33,500"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="348dp"
            android:layout_marginStart="165dp"
            android:layout_marginLeft="165dp"
            android:id="@+id/featuredHotelPricePerNight"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothamroundedmedium_21022"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="/ night"
            android:layout_marginTop="350dp"
            android:layout_marginStart="215dp"
            android:layout_marginLeft="215dp" />


    </androidx.cardview.widget.CardView>
</LinearLayout>