<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".NinthScreen"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0D0D0D"
            android:background="#FFFFFF"
            android:fontFamily="@font/gothamroundedmedium_21022"
            android:layout_gravity="center"
            android:text="Filter"
            android:layout_marginTop="8dp"
            android:textSize="25sp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/group_587"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/backbtnFS"
            />

    </androidx.cardview.widget.CardView>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="23sp"
        android:fontFamily="@font/gothamroundedmedium_21022"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"/>

    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:bar_highlight_color="#EF4E22"
        app:left_thumb_color="#EF4E22"
        app:right_thumb_color="#EF4E22"
        android:scrollbarSize="10dp"
        app:bar_color="#EEEEEE"
        app:left_thumb_color_pressed="#EEEEEE"
        app:right_thumb_color_pressed="#EEEEEE"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Star Ratings"
        android:textSize="23sp"
        android:fontFamily="@font/gothamroundedmedium_21022"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:cardCornerRadius="5dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#D6D6D6"
            android:layout_marginLeft="20dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_light"
                android:textSize="20sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:cardCornerRadius="5dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="13dp"
            app:cardBackgroundColor="#EF4E22">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_light"
                android:textSize="20sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:cardCornerRadius="5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#D6D6D6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="13dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_light"
                android:textSize="20sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:cardCornerRadius="5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#D6D6D6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="20dp"

            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_light"
                android:textSize="20sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guest Ratings"
        android:textSize="23sp"
        android:fontFamily="@font/gothamroundedmedium_21022"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#D6D6D6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7+"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_light"
                android:textSize="20sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:cardCornerRadius="5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#D6D6D6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="9dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8+"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_light"
                android:textSize="20sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:cardCornerRadius="5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#D6D6D6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="9dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.5+"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_light"
                android:textSize="20sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="9dp"
            app:cardBackgroundColor="#EF4E22">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9+"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_light"
                android:textSize="20sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:cardCornerRadius="5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#D6D6D6"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="9dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_light"
                android:textSize="20sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Type"
        android:textSize="23sp"
        android:fontFamily="@font/gothamroundedmedium_21022"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"/>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roomph Premium"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_light"
        android:buttonTint="#EF4E22"/>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roomph Standard"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_light"
        android:buttonTint="#D6D6D6"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_3933"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <CheckBox

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guest"
                android:layout_marginLeft="20dp"
                android:textFontWeight="1"
                android:textSize="17sp"
                android:fontFamily="@font/gothamrounded_bold"
                android:buttonTint="#EF4E22"/>




            <CheckBox

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apartment"
                android:layout_marginLeft="20dp"
                android:textFontWeight="1"
                android:textSize="17sp"
                android:fontFamily="@font/gothamrounded_bold"
                android:buttonTint="#EF4E22"/>


            <CheckBox

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private Home"
                android:layout_marginLeft="20dp"
                android:textSize="17sp"
                android:fontFamily="@font/gothamrounded_bold"
                android:buttonTint="#EF4E22"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="50dp"
            app:cardCornerRadius="5dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLEAR"
                android:textColor="#EF4E22"
                android:fontFamily="@font/gothamrounded_light_21020"
                android:textSize="20sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:id="@+id/applyTV"
            app:cardCornerRadius="5dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp">
            <FrameLayout
                android:background="#EF4E22"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APPLY"

                android:textColor="@color/white"
                android:fontFamily="@font/gothamrounded_light_21020"
                android:textSize="20sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>



    </LinearLayout>


</LinearLayout>











